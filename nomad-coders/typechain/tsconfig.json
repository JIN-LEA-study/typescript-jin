{
  "include": ["src"], // 타입 스크립트가 src의 모든 파일을 확인한다는 것을 의미
  "compilerOptions": {
    "outDir": "build", // outDir은 자바스크립트 파일이 생성될 디렉터리를 지정
    "esModuleInterop": true,
    "target": "ES6", // target은 어떤 버전의 자바스크립트로 타입스크립트를 컴파일하고 싶은지를 나타낸다.
    "lib": ["ES6", "DOM"], // JavaScript 코드가 어디에서 동작할지 알려준다. 어떤 환경인지, 어떤 버전이 그 환경에서 사용되는지
    // DOM은 이 코드를 브라우저 위에서 실행한다는 것을 의미 -> ex)localStorage를 치면 자동 완성 기능이 나타난다.
    // Declaration Files. lib 옵션을 수정하면, 통합된 라이브러리의 정의 파일을 지정할 수 있게 된다.
    "strict": true, // strict 모드는 모든 실수로부터 보호해서 성가시게 할 예정
    "allowJs": true
  }
}
