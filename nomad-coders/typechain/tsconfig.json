{
  "include": ["src"], // 타입 스크립트가 scr의 모든 파일을 확인한다는 것을 의미
  "compilerOptions": {
    "outDir": "build", // outDir은 자바스크립트 파일이 생성될 디렉터리를 지정
    "target": "ES6", // target은 어떤 버전의 자바스크립트로 타입스크립트를 컴파일하고 싶은지를 나타낸다.
    "lib": ["ES6", "DOM"] // JavaScript 코드가 어디에서 동작할지 알려준다. 어떤 환경인지, 어떤 버전이 그 환경에서 사용되는지
    // DOM은 이 코드를 브라우저 위에서 실행한다는 것을 의미
  }
}
